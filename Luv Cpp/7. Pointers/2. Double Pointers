#include<bits/stdc++.h>
using namespace std;

int main(){
     int x = 4;
     int *p = &x;  // storing address of x in pointer 'p' 
     int **pp = &p;  // storing address of p in pointer 'pp'
     cout << "Address of p: " << &p << endl;
     cout << "Address of pp: " << &pp << endl;
     cout << "Value of p: " << p << endl;
     cout << "Value of pp: "<< pp << endl;
     cout << "Value of *pp: "<< *pp << endl;
     cout << "Value of **pp: "<< **pp << endl;
     **pp = 7;
     cout << "x: " << x << endl;

}


* 
INPUT:


OUTPUT: 
Address of p: 0x61ff08
Address of pp: 0x61ff04
Value of p: 0x61ff0c
Value of pp: 0x61ff08
Value of *pp: 0x61ff0c
Value of **pp: 4
x: 7


*/
