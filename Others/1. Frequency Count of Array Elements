// Counting frequencies of array elements...
#include <bits/stdc++.h>
using namespace std;
 
void count(int arr[], int n)
{
    unordered_map<int, int> mp;
    // Traversing array
    for (int i = 0; i < n; i++)
        mp[arr[i]]++;
    // Traversing map and print
    for (auto x : mp)
        cout<<x.first <<" is "<<x.second<<" times "<<endl;
    
    cout<<"Sorted order: ";
    for (auto x : mp)
        cout<<x.first<<" ";
}

int main()
{
    int arr[] = { 10, 20, 20, 10, 10, 20, 5, 20 };
    int n = sizeof(arr)/sizeof(arr[0]);
    count(arr, n);
    return 0;
}
