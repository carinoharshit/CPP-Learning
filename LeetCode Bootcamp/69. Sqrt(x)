// https://leetcode.com/problems/sqrtx/

class Solution {
public:
    int mySqrt(int x) {
        if(x == 1) {
            return 1;
        }
        long long low = 1, high = x/2;
        while(low <= high) {
            long long mid = low + (high - low) / 2;
            long long sqrt = mid * mid;
            if(sqrt == x) {
                return mid;
            }
            else if(sqrt > x) {
                high = mid - 1;
            }
            else {
                low = mid + 1;
            }
        }
        return high;
    }
};
